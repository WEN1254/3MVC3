
@{
    ViewBag.Title = "UserPage";
}

<div id="UserData-Context">
    <b-card no-body>
        <b-tabs card v-model="tabIndex">
            <b-tab title="會員資料" active>
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title">Edit Profile</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Email address</label>
                                        @*<el-input class="form-control">{{UserData[0].Email}}</el-input>*@
                                        <input readonly class="form-control" placeholder="Email"
                                               v-model="UserData[0].Email">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input class="form-control" placeholder="Password"
                                               v-model="UserData[0].Password">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" placeholder="Name"
                                               v-model="UserData[0].CustomerName ">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="tel" class="form-control" placeholder="tel"
                                               v-model="UserData[0].Phone ">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>BirthDay</label>
                                        <input type="date" class="form-control" v-model="UserData[0].BirthDay ">
                                    </div>
                                </div>
                                <div class="update ml-auto mr-auto">
                                    <el-input type="submit" class="btn btn-primary btn-round" v-on:click="Replace">
                                        Update
                                        Profile
                                    </el-input>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </b-tab>
            <b-tab title="訂單紀錄">
                <div  v-for="item in UserOrderData">
                    <b-button block v-b-toggle="item[0].OrderID"class="m-auto">
                        <p> 訂單編號:{{item[0].OrderID}},收件人:{{item[0].RecieverName}}</p>
                    </b-button>
                    <b-collapse v-bind:id="item[0].OrderID" class="mt-2">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">商品名稱</th>
                                    <th scope="col">商品規格</th>
                                    <th scope="col">商品數量</th>
                                    <th scope="col">商品價格</th>
                                    <th scope="col">商品圖片</th>
                                    <th scope="col">單項總金額</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="orderitem in item">
                                    <td>{{orderitem.ProductName}}</td>
                                    <td>{{orderitem.Colour}}</td>
                                    <td>{{orderitem.BuyQuantity}}</td>
                                    <td>{{orderitem.Price}}</td>
                                    <td>
                                        <div style="width: 50px;">
                                            <img class="w-100" v-bind:src="orderitem.Image" />
                                        </div>
                                    </td>
                                    <td>{{orderitem.ProductTotal}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </b-collapse>
                </div>
            </b-tab>
        </b-tabs>
    </b-card>
</div>

@section endJS{
    <script src="~/Assest/js/Controller/GetCustomerInfo.js"></script>
}
