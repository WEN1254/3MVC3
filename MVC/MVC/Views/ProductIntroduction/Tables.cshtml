            <div class="home_link">
                <a href="#">Home</a>
                <span>| Modern Dining Room Furniture</span>
            </div>
            <h1>Tables</h1>
            <ul>
                <li>
                    @Html.ActionLink("Accent And Coffee Tables", "Category", "ProductList", new { type = 7 }, new { sortOrder = ViewBag.ResetParm })
                </li>
                <li>
                    @Html.ActionLink("Office-Desks And Tables", "Category", "ProductList", new { type = 8 }, new { sortOrder = ViewBag.ResetParm })
                </li>
                <li>
                    @Html.ActionLink("Kids-Desk", "Category", "ProductList", new { type = 9 }, new { sortOrder = ViewBag.ResetParm })
