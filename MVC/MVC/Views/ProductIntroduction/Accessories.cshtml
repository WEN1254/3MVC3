
@{
    ViewBag.Title = "Accessories";
}

<div class="content">
    <div class="category_image ">
        <div class="category_img w-100">
            <img src="https://res-5.cloudinary.com/dwpujv6in/image/upload/c_pad,dpr_2.0,f_auto,q_auto/v1/media/catalog/tmp/category/WebM2_CategoryLandingPages_Marquees_AccessoriesNov18.jpg"
                 alt="" class="image w-100 ">
        </div>
        <div class="category_content">
            <h4 class="text-center">New Accessories Designs</h4>
            <a href="#">
                <img src="https://res-2.cloudinary.com/dwpujv6in/image/upload/c_pad,dpr_2.0,f_auto,q_auto/v1/media/wysiwyg/clp/WebM2_CategoryLandingPages_Sections_Wonk.jpg"
                     alt="" class="image w-100">
                <h6>WONK VASES</h6>
            </a>
            <a href="#">
                <img src="https://res-2.cloudinary.com/dwpujv6in/image/upload/c_pad,dpr_2.0,f_auto,q_auto/v1/media/wysiwyg/clp/WebM2_CategoryLandingPages_Sections_FancyRug.jpg"
                     alt="" class="image w-100">
                <h6>FANCY RUG</h6>
            </a>
            <a href="#">
                <img src="https://res-3.cloudinary.com/dwpujv6in/image/upload/c_pad,dpr_2.0,f_auto,q_auto/v1/media/wysiwyg/clp/WebM2_CategoryLandingPages_Sections_WhoGoesThere.jpg"
                     alt="" class="image w-100">
                <h6>WHO GOES THERE? CANDLE HOLDERS</h6>
                <p>5 SHAPES, 3 COLORS</p>
            </a>
        </div>

    </div>
    <div class="category_menu ">
        <div class="category_menu_content">
            <div class="home_link">
                <a href="#">Home</a>
                <span>| Modern Accessories</span>
            </div>
            <h1>Accessories</h1>
            <ul>
                <li>
                    @Html.ActionLink("Rugs", "Category", "ProductList", new { type = 14 }, new { sortOrder = ViewBag.ResetParm })
                </li>
                <li>
                    @Html.ActionLink("Pillows And Cushionss", "Category", "ProductList", new { type = 15 }, new { sortOrder = ViewBag.ResetParm })
                </li>
                <li>
                    @Html.ActionLink("Mirrors", "Category", "ProductList", new { type = 16 }, new { sortOrder = ViewBag.ResetParm })
                </li>
                <li>
                    @Html.ActionLink("Bedding", "Category", "ProductList", new { type = 17 }, new { sortOrder = ViewBag.ResetParm })
                </li>
            </ul>
        </div>
    </div>
</div>
@section topCSS{
    <link href="~/Assest/css/Introduction.css" rel="stylesheet" />
    @*<link href="~/Content/Chart.css" rel="stylesheet" />*@
    <style>
        li a {
            color: black;
            text-decoration: none;
        }

            li a:hover {
                color: black;
                text-decoration: none;
            }
    </style>
}

